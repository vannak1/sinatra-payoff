<div class="row">
  <div class="col-md-12">
    <h2>Add Account</h2>
    <% unless locals.empty? %>
      <%= message %>
    <% end %>
    <form action="/account" method="POST">
      <p>Name: <input type="text" name="account[name]"></p>
      <p>Current Balance: <input type="text" name="account[balance]"></p>
      <p>Interest: <input type="text" name="account[interest]"></p>
      <p>Minimum Payment: <input type="text" name="account[min_payment]"></p>
      <p>Due Date: <input type="text" name="account[date]"></p>
      <input class="btn btn-primary" type="submit" value="submit">
    </form>
  </div>
</div>
