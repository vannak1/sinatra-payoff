<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4 form well">
    <h3>Sign Up</h3>
    <% unless locals.empty? %>
      <%= message %>
    <% end %>
    <hr>
    <form action="/signup" method="POST">
      <input class="input-fields" type="text" name="user[f_name]" placeholder="First Name"><br>
      <input class="input-fields" type="email" name="user[email]" placeholder="Email"><br>
      <input class="input-fields" type="password" name="user[password]" placeholder="Password"><br>
      <input class="btn btn-warning btn-block btn-margin input-fields" type="submit" value="Submit">
    </form>
  <div class="col-md-4">
  </div>
</div>
